{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install-pkgs",
            "command": "uv sync",
            "type": "shell"
        },
        {
            "label": "install-pre-commit",
            "command": "uv run pre-commit install",
            "type": "shell"
        },
        {
            "label": "install",
            "dependsOn": ["install-pkgs", "install-pre-commit"],
            "dependsOrder": "sequence"
        },
        {
            "label": "pre-commit",
            "command": "uv run pre-commit run --all-files",
            "type": "shell"
        },
        {
            "label": "tests",
            "command": "uv run pytest --cov=vscode_task_runner/ --cov-report html",
            "type": "shell"
        },
        {
            "label": "tests-report",
            "command": "uv run python -m http.server --directory htmlcov/",
            "type": "shell",
        },
        {
            "label": "build",
            "command": "uv build",
            "type": "shell"
        }
    ]
}
